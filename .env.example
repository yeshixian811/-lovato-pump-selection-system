# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lovato_pump_selection
DB_USER=postgres
DB_PASSWORD=postgres

# 应用配置
NODE_ENV=development
PORT=5000
NEXT_PUBLIC_APP_URL=http://localhost:5000

# 微信小程序配置
# 微信公众号 AppID（用于微信 JSSDK）
NEXT_PUBLIC_WECHAT_APP_ID=your_wechat_app_id_here

# 微信小程序 AppID（可选）
NEXT_PUBLIC_MINIPROGRAM_APP_ID=your_miniprogram_app_id_here

# 微信 AppSecret（注意：这个配置应该只存在于服务端，不要暴露给前端）
# 仅在服务端 API 中使用
WECHAT_APP_SECRET=your_wechat_app_secret_here

# 其他配置
NEXT_PUBLIC_SITE_NAME=洛瓦托水泵选型系统
NEXT_PUBLIC_SITE_URL=https://luowato.com
