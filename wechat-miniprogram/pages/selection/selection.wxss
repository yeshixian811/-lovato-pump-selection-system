/* 智能选型样式 */

.selection-form {
  padding: 30rpx;
}

.form-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.form-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 12rpx;
}

.form-desc {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
}

.form-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.section-label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.label-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
}

.label-value {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e40af;
}

.form-slider {
  margin: 20rpx 0;
}

.slider-tips {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
}

.tip {
  font-size: 22rpx;
  color: #94a3b8;
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.picker-text {
  font-size: 28rpx;
  color: #0f172a;
}

.picker-arrow {
  font-size: 36rpx;
  color: #94a3b8;
}

.form-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background: #1e40af;
  color: #ffffff;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #1e40af;
  color: #1e40af;
}

.btn-block {
  width: 100%;
  flex: none;
}

/* 选型结果 */
.selection-results {
  padding: 30rpx;
}

.results-header {
  background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-left {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.header-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.result-summary {
  background: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
}

.summary-label {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-right: 8rpx;
}

.summary-value {
  font-size: 24rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 结果卡片 */
.results-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

.result-card::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: #1e40af;
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.result-model {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
}

.result-badge {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
}

.badge-success {
  background: #dcfce7;
  color: #166534;
}

.badge-warning {
  background: #fef3c7;
  color: #92400e;
}

.badge-info {
  background: #dbeafe;
  color: #1e40af;
}

.result-name {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 20rpx;
}

.result-specs {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.spec-item {
  display: flex;
  font-size: 24rpx;
}

.spec-label {
  color: #64748b;
  margin-right: 8rpx;
}

.spec-value {
  color: #0f172a;
  font-weight: 500;
}

.result-match {
  background: #f8fafc;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
}

.match-item {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.match-item:last-child {
  margin-bottom: 0;
}

.match-label {
  color: #64748b;
}

.match-value {
  font-weight: 600;
  color: #0f172a;
}

.text-success {
  color: #22c55e;
}

.text-warning {
  color: #f59e0b;
}

.result-footer {
  display: flex;
  justify-content: flex-end;
}

.view-detail {
  font-size: 26rpx;
  color: #1e40af;
  font-weight: 600;
}

/* 空结果 */
.empty-results {
  text-align: center;
  padding: 80rpx 40rpx;
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #64748b;
  line-height: 1.6;
}

.result-actions {
  margin-top: 30rpx;
}
