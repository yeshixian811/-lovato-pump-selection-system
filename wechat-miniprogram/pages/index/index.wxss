.quick-actions {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.action-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.selection-icon {
  background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
}

.selection-icon::after {
  content: 'üéØ';
