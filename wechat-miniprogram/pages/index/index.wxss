  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 40rpx;
}

.contact-icon {
  background: linear-gradient(135deg, #f59e0b 0%, #fbbf24 100%);
}

.contact-icon::after {
  content: 'üìû';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 40rpx;
}

.action-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f172a;
  margin-bottom: 4rpx;
}

.action-desc {
  font-size: 24rpx;
  color: #64748b;
}

/* ÂàÜÂå∫Ê†áÈ¢ò */
.section {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #0f172a;
  position: relative;
  padding-left: 20rpx;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background: #1e40af;
  border-radius: 3rpx;
}

.section-more {
  font-size: 26rpx;
  color: #1e40af;
  display: flex;
  align-items: center;
}

.arrow {
  margin-left: 4rpx;
  font-size: 32rpx;
}

/* ‰∫ßÂìÅÁΩëÊ†º */
.products-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.product-card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 200rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin-bottom: 16rpx;
}

.product-badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 8rpx 16rpx;
  background: #1e40af;
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 8rpx;
}

.product-info {
  display: flex;
  flex-direction: column;
}

.product-model {
  font-size: 28rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 4rpx;
}

.product-name {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-specs {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  margin-bottom: 12rpx;
}

.spec-item {
  display: flex;
  font-size: 22rpx;
}

.spec-label {
  color: #64748b;
  margin-right: 8rpx;
}

.spec-value {
  color: #0f172a;
  font-weight: 500;
}

.product-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 4rpx 12rpx;
  background: #f1f5f9;
  color: #475569;
  font-size: 20rpx;
  border-radius: 6rpx;
}

