.banner-container {
  width: 100%;
  height: 400rpx;
  margin-bottom: 30rpx;
}

.banner-swiper {
  width: 100%;
  height: 100%;
}

.banner-item {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #1e40af 0%, #3b82f6 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.banner-content {
  text-align: center;
  color: #ffffff;
}

.banner-title {
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.banner-desc {
  font-size: 28rpx;
  margin-bottom: 32rpx;
  opacity: 0.9;
}

.banner-btn {
  display: inline-block;
  padding: 16rpx 48rpx;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 48rpx;
  font-size: 26rpx;
}

