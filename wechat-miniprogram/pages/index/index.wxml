<!-- 首页 -->

<view class="page-container">
  <!-- 轮播图 -->
  <view class="banner-container">
    <swiper
      class="banner-swiper"
      indicator-dots="{{true}}"
      autoplay="{{true}}"
      interval="5000"
      duration="500"
      indicator-color="rgba(255,255,255,0.5)"
      indicator-active-color="#1e40af"
      circular="{{true}}"
    >
      <swiper-item wx:for="{{banners}}" wx:key="id">
        <view class="banner-item" bindtap="onBannerTap" data-action="{{item.action}}">
          <view class="banner-content">
            <view class="banner-title">{{item.title}}</view>
            <view class="banner-desc">{{item.description}}</view>
            <view class="banner-btn">查看详情</view>
          </view>
        </view>
      </swiper-item>
    </swiper>
  </view>

  <!-- 快速入口 -->
  <view class="quick-actions">
    <view class="action-item" bindtap="onQuickSelection">
      <view class="action-icon selection-icon"></view>
      <view class="action-title">智能选型</view>
      <view class="action-desc">快速匹配</view>
    </view>
    <view class="action-item" bindtap="onViewAllProducts">
      <view class="action-icon products-icon"></view>
      <view class="action-title">产品库</view>
      <view class="action-desc">全部型号</view>
    </view>
    <view class="action-item" bindtap="onContact">
      <view class="action-icon contact-icon"></view>
      <view class="action-title">联系我们</view>
      <view class="action-desc">技术咨询</view>
    </view>
  </view>

  <!-- 精选产品 -->
  <view class="section">
    <view class="section-header">
      <view class="section-title">精选产品</view>
      <view class="section-more" bindtap="onViewAllProducts">
        查看全部
        <text class="arrow">›</text>
      </view>
    </view>

    <view class="products-grid">
      <view
        class="product-card"
        wx:for="{{featuredProducts}}"
        wx:key="id"
        bindtap="onProductTap"
        data-id="{{item.id}}"
      >
        <view class="product-image">
          <text class="product-badge">{{item.series}}</text>
        </view>
        <view class="product-info">
          <view class="product-model">{{item.model}}</view>
          <view class="product-name">{{item.name}}</view>
          <view class="product-specs">
            <view class="spec-item">
              <text class="spec-label">流量:</text>
              <text class="spec-value">{{item.max_flow_rate}} m³/h</text>
            </view>
            <view class="spec-item">
              <text class="spec-label">扬程:</text>
              <text class="spec-value">{{item.max_head}} m</text>
            </view>
            <view class="spec-item">
              <text class="spec-label">功率:</text>
              <text class="spec-value">{{item.rated_power}} kW</text>
            </view>
          </view>
          <view class="product-tags">
            <view class="tag" wx:for="{{item.applications}}" wx:for-item="app" wx:key="*this">
              {{app}}
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 产品特性 -->
  <view class="features-section">
    <view class="section-header">
      <view class="section-title">产品优势</view>
    </view>

    <view class="features-grid">
      <view class="feature-item">
        <view class="feature-icon icon-efficiency"></view>
        <view class="feature-title">高效节能</view>
        <view class="feature-desc">效率高达 75%以上，降低运行成本</view>
      </view>
      <view class="feature-item">
        <view class="feature-icon icon-quality"></view>
        <view class="feature-title">品质可靠</view>
        <view class="feature-desc">优质材料，精密制造，经久耐用</view>
      </view>
      <view class="feature-item">
        <view class="feature-icon icon-application"></view>
        <view class="feature-title">应用广泛</view>
        <view class="feature-desc">适用于工业、市政、消防等多种场景</view>
      </view>
      <view class="feature-item">
        <view class="feature-icon icon-service"></view>
        <view class="feature-title">专业服务</view>
        <view class="feature-desc">专业技术团队，提供全方位支持</view>
      </view>
    </view>
  </view>

  <!-- 底部信息 -->
  <view class="footer">
    <view class="footer-logo">Lovato 洛瓦托</view>
    <view class="footer-desc">专业水泵解决方案提供商</view>
    <view class="footer-copyright">© 2024 洛瓦托水泵</view>
  </view>
</view>
