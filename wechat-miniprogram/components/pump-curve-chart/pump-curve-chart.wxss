/* 性能曲线图表样式 */

.pump-curve-chart-container {
  width: 100%;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.chart-header {
  margin-bottom: 20rpx;
  text-align: center;
}

.chart-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1e40af;
  margin-bottom: 8rpx;
}

.chart-subtitle {
  font-size: 26rpx;
  color: #64748b;
}

.chart-wrapper {
  width: 100%;
  height: 600rpx;
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.chart-legend {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 20rpx 0;
  gap: 24rpx;
}

.legend-item {
  display: flex;
  align-items: center;
}

.legend-line {
  width: 60rpx;
  height: 4rpx;
  margin-right: 12rpx;
  border-radius: 2rpx;
}

.reference-line {
  background: #ef4444;
  border: 2rpx dashed #ef4444;
}

.head-line {
  background: #1e40af;
}

.efficiency-line {
  background: #22c55e;
  border-bottom: 2rpx dashed #22c55e;
}

.power-line {
  background: #f59e0b;
  border-bottom: 2rpx dashed #f59e0b;
}

.legend-text {
  font-size: 24rpx;
  color: #64748b;
}

.chart-empty {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
  background: #f8fafc;
  border-radius: 12rpx;
}

.empty-text {
  font-size: 26rpx;
  color: #94a3b8;
}

/* 加载状态 */
.chart-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
  background: #ffffff;
  border-radius: 12rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e2e8f0;
  border-top-color: #1e40af;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #64748b;
}
